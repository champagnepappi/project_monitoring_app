<%= form_for(@message, html: {multipart: true}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.text_area :content, placeholder: "Compose new message..." %>
    </div>
    <%= f.submit "Submit", class: "button" %>
    <span class="picture">
        <%= f.file_field :picture %> 
    </span>
<% end %>
