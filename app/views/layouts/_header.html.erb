<div sdata-sticky-container>
    <div class="top-bar" id="example-menu">
        <div class="top-bar-left">
            <ul class="menu">
                <li> <%= link_to fa_icon('home', text: "Home"), root_path %></li>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu" >
                <% unless logged_in? %>
                    <li> <%= link_to fa_icon('sign-in', text: "Login"), login_path %></li>
                <% else %>
                    <% if current_user.admin?%>
                        <li> <%= link_to fa_icon('folder-open', text: "Projects"), projects_path %></li>
                    <% end %>
                    <li> <%= link_to fa_icon('sign-out', text: "Logout"), logout_path, method: :delete %></li>
                    <li> <%= link_to fa_icon('user', text: "Profile"), current_user %></li>
                    <li> <%= link_to fa_icon('pencil', text: "Settings"),edit_user_path(current_user) %></li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
