<% provide(:title, "Users")%>
<div class="medium-12">
    <table >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Project title</th>
                <th>Project Status</th>
                <th>action</th>
            </tr>
        </thead>
        <% @users.each do |user| %>
            <tbody>
                <tr>
                    <td> <%= user.id %></td>
                    <td> <%= link_to user.first_name, user %></td>
                    <%  user.projects.each do |p| %>
                        <td> <%= p.title %></td>
                        <td> <%= p.status %></td>
                    <% end %>
                    <% if user.projects.any? && user.not_assigned? %>
                    <td><%= link_to "assign supervisor", supervisor_path(user_id: user.id), class: "button" %> </td>
                <% elsif user.assigned? %>
                    <td>assigned</td>
                    <% end %>
                </tr>
            </tbody>
        <% end %>
    </table>

</div>
