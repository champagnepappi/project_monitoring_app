<% provide(:title, "Users")%>
<div class="medium-12">
    <table >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Projects</th>
                <th>Project Status</th>
            </tr>
        </thead>
        <% @users.each do |user| %>
            <tbody>
            <tr>
                <td> <%= user.id %></td>
                <td> <%= link_to user.first_name, user %></td>
                <%  user.projects.each do |p| %>
                    <td> <%= p.title %></td>
                    <td> <%= p.status %></td>
                <% end %>
            </tr>
            </tbody>
        <% end %>
    </table>

</div>
